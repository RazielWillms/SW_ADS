drop database Rockinrs;
create database RockinRS;

use RockinRS;

create table Venda_Ingresso(
	id_venda integer primary key auto_increment,
        valor_ingresso float,
	valor_total_venda float,
        volume_venda integer,
        tipo varchar(10),
	lote integer
);
drop table Venda_Ingresso;



create table BandaDados(
	id_bandaDados integer primary key auto_increment,
	Nome_Banda varchar(50),
        genero varchar(10),
        nr_integrantes int
);
drop table BandaDados;

create table DadoPessoal(
	id_DadoPessoal integer primary key auto_increment,
	id_venda integer,
        nome_clinete varchar(50),
        cpf varchar(20),
	data_nascimento date,
        email varchar(50),
        telefone bigint(14),
        foreign key(id_venda) references Venda_Ingresso(id_venda)

);
drop table DadoPessoal;

create table DadosEvento(		
	id_DadosEvento integer primary key auto_increment,
        id_DadoPessoal integer,
	id_bandaDados integer,
        banda_dia varchar(50),
        cidade varchar(50),
        foreign key(id_DadoPessoal) references DadoPessoal(id_DadoPessoal),
        foreign key(id_bandaDados) references BandaDados(id_bandaDados)
);
drop table DadosEvento;
